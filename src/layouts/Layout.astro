---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-K86XXVK"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);
    --primary-bg: #fff;
    --primary-text: #13151a;
    --secondary-bg: #13151a;
    --secondary-text: #fff;

    --heading-size: 2rem;
    --subheading-size: 1.75rem;
    --paragraph-size: 1.125rem;
    --line-height: 1.5;

    --section-margin-top: 16px;

  }

  @media (prefers-color-scheme: dark) {
    :root {
      --primary-bg: #13151a;
      --primary-text: #fff;
      --secondary-bg: #fff;
      --secondary-text: #13151a;
    }
  }
  html {
    font-family: Seravek, 'Gill Sans Nova', Ubuntu, Calibri, 'DejaVu Sans', source-sans-pro, sans-serif;
    background: var(--primary-bg);
    background-size: 224px;
  }
  body {
    margin: 0;
  }
  body,h1,h2,h3,h4,h5,h6,p {
    margin: 0;
  }

  code {
    font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace;
  }

  @media (min-width: 768px) {
    :root {
      --heading-size: 2.5rem;
      --subheading-size: 2rem;
      --paragraph-size: 1.25rem;
      --line-height: 1.5;
    }
  }

  @media (min-width: 1380px) {
    :root {
      --heading-size: 3rem;
      --subheading-size: 2.25rem;
      --paragraph-size: 1.375rem;
      --line-height: 1.66;
    }
  }
</style>
