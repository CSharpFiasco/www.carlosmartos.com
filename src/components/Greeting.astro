---
import resume from '../assets/resume/Carlos_Martos_Resume_20230111.pdf';
import sittingOnTableSvg from '../assets/images/undraw_on_the_office_re_cxds.svg';

const greeting = {
  /* Your Summary And Greeting Section */
  subTitle:
    'A passionate Software Developer with experience building web applications with .NET, SQL Server and Angular',
  resumeLink: resume,
} as const;
---

<div class="greet-main" id="greeting">
  <div class="greeting-main">
    <div class="greeting-text-div">
      <div>
        <h1>Hi all, I'm <span class="nowrap"><span class="text-gradient">Carlos</span> ðŸ‘‹</span></h1>
        <p class="greeting-text-p subTitle">{greeting.subTitle}</p>
        <!-- <SocialMedia /> -->
        <div class="button-greeting-div">
          <div>
            <a
              id="resume-download-button"
              class="main-button"
              href={greeting.resumeLink}
              rel="noreferrer"
              target="_blank"
            >
              See my resume
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="greeting-image-div">
      <img alt="Developer sitting on table" src={sittingOnTableSvg.src} />
    </div>
  </div>
</div>
<style>
  .greet-main {
    margin: 0px auto;
    margin-top: 2rem;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
  }

  .nowrap {
    white-space: nowrap;
  }

  .greeting-main {
    display: flex;
    gap: 50px;
  }

  .greeting-main > * {
    flex: 1;
    margin-bottom: 30px;
  }
  .button-greeting-div {
    display: flex;
    margin-top: 20px;
  }

  .greeting-text {
    font-size: 4.375rem;
  }

  .greeting-text-p {
    font-size: 1.875rem;
    line-height: 2.5rem;
    margin: auto;
  }

  .greeting-image-div > img {
    max-width: 100%;
    height: auto;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .main-button {
    background-color: #55198b;
    border: solid 1px #55198b;
    color: white;
    font-weight: 700;
    width: max-content;
    padding: 13px 22px;
    text-transform: uppercase;
    border-radius: 6px;
    text-align: center;
    text-decoration: none;
    display: block;
    margin-top: 20px;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease-in-out 0s;
  }
  .main-button:hover {
    background-color: #ffffff;
    color: #55198b;
    transition: all 0.3s ease 0s;
    transform: translateY(-3px);
  }

  @keyframes wave {
    0% {
      transform: rotate(0deg);
    }
    10% {
      transform: rotate(-10deg);
    }
    20% {
      transform: rotate(12deg);
    }
    30% {
      transform: rotate(-10deg);
    }
    40% {
      transform: rotate(9deg);
    }
    50% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }

  /* Media Query */
  @media (max-width: 1380px) {
    h1 {
      font-size: 3.5rem;
    }
    .greeting-text {
      font-size: 3.125rem;
    }
    .greeting-text-p {
      font-size: 1.25rem;
      line-height: 1.75rem;
    }
  }
  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    .button-greeting-div {
      justify-content: space-around;
    }
    .greeting-text {
      font-size: 1.875rem;
      text-align: center;
    }
    .greeting-text-p {
      font-size: 1rem;
      text-align: center;
    }
    .greeting-main {
      display: block;
    }
  }

  /* Media Query Main Button */
  @media (max-width: 768px) {
    .main-button {
      font-size: .9375rem;
      padding: 12px 18px;
      margin-right: 0px;
    }

    .greeting-text-p {
      width: 32rem;
      max-width: 100%;
    }
  }
  @media (max-width: 320px) {
    .main-button {
      font-size: .75rem;
    }
  }
</style>
