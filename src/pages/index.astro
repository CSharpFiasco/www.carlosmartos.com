---
import Layout from '../layouts/Layout.astro';
import WorkExperience from '../components/WorkExperience.astro';
import Education from '../components/Education.astro';
import Skills from '../components/Skills.astro';
import Greeting from '../components/Greeting.astro';
import Achievement from '../components/Achievement.astro';
import { type ProfilePage, type WithContext } from 'schema-dts';

const profilePage: WithContext<ProfilePage> = { 
  "@context": "https://schema.org",
  "@type": "ProfilePage",
  mainEntity: {
    "@id": "#main-author",
    "@type": "Person",
    "name": "Carlos Martos"
  },
  dateModified: (new Date()).toISOString()
};
---
<Layout title="Carlos Martos Portfolio" schema={profilePage}>
  <main>
    <Greeting />
    <Skills />
    <Education />
    <WorkExperience />
    <Achievement />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 960px;
    max-width: calc(100% - 2rem);
    color: var(--primary-text);
    font-size: 1.25rem;
  }

  @media (min-width: 768px) {
    main {
      padding: 1rem 2rem;
      max-width: calc(100% - 4rem);
    }
  }
</style>
